<extra>
<ROOT>
    <sheetTitle>NewsFilter</sheetTitle>
    <type>array</type>
    <el>
        <settings.enableFilter>
            <label>LLL:EXT:news_filter/Resources/Private/Language/locallang_ff.xlf:settings.enableFilter</label>
            <config>
                <type>check</type>
                <default>0</default>
            </config>
        </settings.enableFilter>

        <!-- Category -->
        <settings.filterCategories>
            <label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categories</label>
            <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>2</size>
                <maxitems>50</maxitems>
                <minitems>0</minitems>
            </config>
        </settings.filterCategories>

        <!-- Tags -->
        <settings.filterTags>
            <label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.tags</label>
            <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>2</size>
                <maxitems>50</maxitems>
                <minitems>0</minitems>
            </config>
        </settings.filterTags>

        <!-- Session Filter -->
        <settings.keepFilterOnReload>
            <TCEforms>
                <label>LLL:EXT:news_filter/Resources/Private/Language/locallang_ff.xlf:settings.keepFilterOnReload</label>
                <config>
                    <type>check</type>
                    <default>0</default>
                </config>
            </TCEforms>
        </settings.keepFilterOnReload>
    </el>
</ROOT>
</extra>
